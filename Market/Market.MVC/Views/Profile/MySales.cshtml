@model IEnumerable<Market.Application.Features.Products.Queries.GetSalesStatistics.GetSalesStatisticsDto>
@{
    Layout = "_Layout";
}

<main role="main">
    <div class="wrapper">
        <div class="container">
            <div class="row">
                <partial name="_ProfileSidebar" />
                <div class="col-lg-9">
                    <div class="row">
                        <div class="col-md-12 col-lg-12 col-xl-12">
                            <div class="card mb-4">
                                <div class="card-body">
                                    <div class="invoice">
                                        <div class="row mb-3">
                                            <div class="col-md-12 col-lg-12">
                                                <div class="invoice-summary">
                                                    <div class="table-responsive">
                                                        <table class="table table-hover table-borderless">
                                                            <thead>
                                                            <tr>
                                                                <th scope="col">#</th>
                                                                <th scope="col">Товар</th>
                                                                <th scope="col">Количество продаж</th>
                                                                <th scope="col" class="text-right">Общая выручка</th>
                                                            </tr>
                                                            </thead>
                                                            <tbody>
                                                            @{
                                                                var counter = 1;
                                                                var totalRevenue = 0m;
                                                            }
                                                            @foreach (var item in Model)
                                                            {
                                                                totalRevenue += item.TotalRevenue;
                                                                <tr>
                                                                    <th scope="row">@counter</th>
                                                                    <td>@item.ProductTitle</td>
                                                                    <td>@item.TotalSalesCount</td>
                                                                    <td class="text-right">@item.TotalRevenue.ToString("C")</td>
                                                                </tr>
                                                                counter++;
                                                            }
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="row mb-3">
                                            <div class="col-md-12 col-lg-12">
                                                <div class="invoice-total text-right font-16">
                                                    <p>Общая выручка : <span class="text-danger font-weight-bold">@totalRevenue.ToString("C")</span></p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>