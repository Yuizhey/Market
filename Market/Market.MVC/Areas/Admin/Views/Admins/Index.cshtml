@model IEnumerable<Market.Application.Features.Users.Queries.GetAdmins.AdminDto>

@{
    ViewData["Title"] = "Администраторы";
    Layout = "_Layout";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Список администраторов</h4>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Подтвержден</th>
                                    <th>Действия</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var admin in Model)
                                {
                                    <tr>
                                        <td>@admin.Email</td>
                                        <td>
                                            <button class="btn btn-danger btn-sm" onclick="deleteAdmin('@admin.Id')">
                                                <i class="icofont-trash"></i> Удалить
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function deleteAdmin(id) {
            if (confirm('Вы уверены, что хотите удалить этого администратора?')) {
                fetch(`/Admin/Admins/Delete/${id}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    credentials: 'same-origin'
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Ошибка при удалении администратора');
                    }
                }).catch(error => {
                    console.error('Ошибка:', error);
                    alert('Ошибка при удалении администратора');
                });
            }
        }
    </script>
} 