@model Market.MVC.Areas.Admin.Models.AdminAuthorsVM
@{
    Layout = "_Layout";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card bg-transparent">
                <div class="table-responsive">
                    <table class="contact-list-table text-nowrap bg-white">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Имя</th>
                                <th>Фамилия</th>
                                <th>Пол</th>
                                <th>Телефон</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var author in Model.Authors)
                            {
                                <tr id="author-@author.Id">
                                    <td>@author.Email</td>
                                    <td>@author.FirstName</td>
                                    <td>@author.LastName</td>
                                    <td>@author.Gender</td>
                                    <td>@author.Phone</td>
                                    <td class="actions">
                                        <button class="btn btn-primary btn-sm">
                                            Действия
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 