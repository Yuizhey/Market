@model IEnumerable<Market.Application.Features.Products.Queries.GetAll.GetAllProductsDto>

@{
    ViewData["Title"] = "Управление продуктами";
    Layout = "_Layout";
}

<div class="container-fluid">
    <h2 class="mb-4">Управление продуктами</h2>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Название</th>
                            <th>Подзаголовок</th>
                            <th>Цена</th>
                            <th>Автор</th>
                            <th>Тип</th>
                            <th>Действия</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model)
                        {
                            <tr>
                                <td>@product.Id</td>
                                <td>@product.Title</td>
                                <td>@product.Subtitle</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>@product.AuthorName</td>
                                <td>@product.ProductType</td>
                                <td>
                                    <div class="btn-group">
                                        <a href="@Url.Action("Delete", new { id = product.Id })" class="btn btn-sm btn-danger" 
                                           onclick="return confirm('Вы уверены, что хотите удалить этот продукт?');">
                                            <i class="fas fa-trash"></i> Удалить
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div> 